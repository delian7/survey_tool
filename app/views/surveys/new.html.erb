<div class="max-w-md mx-auto">
  <h1 class="survey-title">New Survey</h1>

  <%= form_with(model: @survey, local: true) do |f| %>
    <% if @survey.errors.any? %>
      <div class="error-message">
        <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>
        <ul>
          <% @survey.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :question, class: "label" %>
      <%= f.text_field :question, class: "text-input" %>
    </div>

    <div>
      <%= f.submit 'Create Survey', class: "btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Surveys', root_path, class: "link-back" %>
</div>